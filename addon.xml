<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.puppet-fever.launcher" name="Puppet Fever" version="1.0.0" provider-name="simons-public">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="script.module.simple.downloader" version="1.9.5"/>
    </requires>
    <extension point="xbmc.python.script" library="addon.py">
        <provides>video game</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Puppet Fever Companion App</summary>
        <description lang="en">Downloads and launches the Companion App for Puppet Fever</description>
        <platform>linux</platform>
        <language>en</language>
        <license>MIT</license>
        <website>https://www.puppetfever.com</website>
        <source>https://github.com/simons-public/script.puppet-fever.launcher</source>
        <email></email>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
			<banner>resources/banner.jpg</banner>
			<logo>resources/logo.png</logo>
		</assets>
    </extension>
</addon>
